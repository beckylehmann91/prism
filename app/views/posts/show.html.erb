<div class="post-show text-center">
  <h1><%= @post.title %></h1>

  <% if notice %>
    <p id="notice"><%= notice %></p>
  <% end %>

  <div class="post-main">

    <% @images.each do |p| %>
      <div class="each-photo">
        <%= image_tag p.filename_url, :class =>"photo pic-shadow" %>
      </div>
    <% end %>

    <div class="audio-controls">
      <ul>
        <li><a href="#" id="play">play</a></li>
        <li><a href="#" id="stop">stop</a></li>
        <li><a href="#" id="pause">pause</a></li>
      </ul>
    </div>

    <div class="matrix">
      <h4>Sound Matrix</h4>
      <ul>
        <li>Luminence: <%= @images.first.lum %></li>
        <li>Color variety: <%= @images.first.var %> </li>
        <li>Contrast: <%= @images.first.con %> </li>
        <li>Dominant color: <%= @images.first.color_name.capitalize %> </li>
      </ul>
    </div>

    <div>
      <% @images.each do |image| %>
        <p>
          <span></span>
        </p>
      <% end %>
    </div>

    <p><%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %></p>

  </div>
</div>

