<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<div id="img-carousel" class="owl-carousel">
  <% @posts.each do |post| %>
    <div class="item">
      <a href=<%= post_path(post) %>><img src=<%= post.images.first.file_path %>></a>
    </div>
  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>


