
<div class="top_content">
  <h1 class="text-center prism">Prism</h1>

  <% if notice %>
    <p id="notice"><%= notice %></p>
  <% end %>

  <div id="img-carousel" class="owl-carousel">
    <% @posts.each do |post| %>
      <div class="item">
        <a href=<%= post_path(post) %>><img src=<%= post.images.first.file_path %> class="pic-shadow"></a>
      </div>
    <% end %>
  </div>
</div>

<div class="post-main text-center white-text">
  <h3>Recent Prism Uploads</h3>

  <% Post.last(3).each do |post| %>
    <div class="post-item">
      <h4><%= link_to post.title, post %></h4>
      <a href="/posts/<%= post.id %>"><img src="<%= post.images.first.filename %>" class="tiny-pic"></a>
      <p><%= link_to 'Listen', post %></p>
      <!-- | <%= link_to 'Edit', edit_post_path(post) %> -->
       <!-- <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %> -->
    </div>
  <% end %>
  <div class="new-button-div">
    <%= link_to 'New Post', new_post_path, class:"new-button" %>
  </div>
</div>
<div class="photoShow">
  <div>
    <img class="current back-drop" src="/seedImages/violet_sky.png" >
  </div>
<!--   <div>
    <img class="back-drop" src="/seedImages/orange_ice.png" >
  </div> -->
</div>
